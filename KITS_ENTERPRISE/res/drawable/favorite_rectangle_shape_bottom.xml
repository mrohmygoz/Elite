<?xml version="1.0" encoding="utf-8"?>
<shape 
xmlns:android="http://schemas.android.com/apk/res/android"
android:shape="rectangle"
>
    
    <!--     
    shape的類型含有:  
    1.rectangle  長方形、矩形
    2.oval  橢圓形、卵形
    3.line  線
    4.ring  環形
    -->
 
    <!-- 圓角，Layout佈局圓角幅度設定值 --> 
     <corners 
       android:bottomRightRadius="10dp"
       android:bottomLeftRadius="10dp"
       android:topLeftRadius="0dp"
       android:topRightRadius="0dp">         
     </corners>    
        
    <!-- 框內底部顏色 -->
    <solid 
    android:color="@android:color/white" 
    />
        
    <!-- 外框，框線粗細，框線顏色 -->
    <stroke
    android:width="0.0dip"
    android:color="#228B22" 
    />

    <!-- 畫面顏色漸層，開始色碼與結束色碼進行漸層，角度為315度 -->
    <gradient
    android:startColor="@color/elite_theme_color_favorite_item_bottom_background"
    android:endColor="@color/elite_theme_color_favorite_item_bottom_background"
    android:angle="315"
    />
        
    <!-- padding內縮距離 -->
    <padding
    android:left="0dip"
    android:right="0dip"
    android:top="5dip"
    android:bottom="0dip"
    />
        
    <!-- 尺寸大小 -->
    <size
    />
        
</shape>