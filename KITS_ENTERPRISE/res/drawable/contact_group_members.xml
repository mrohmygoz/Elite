<?xml version="1.0" encoding="utf-8"?>
<shape 
xmlns:android="http://schemas.android.com/apk/res/android"
android:shape="oval"
>

    
    <!--     
    shape的類型含有:  
    1.rectangle  長方形、矩形
    2.oval  橢圓形、卵形
    3.line  線
    4.ring  環形
    -->
 
    <!-- 圓角，Layout佈局圓角幅度設定值 -->
    <corners 
	android:radius="10dip" 
    />
   
    <!-- 外框，框線粗細，框線顏色 -->
    <stroke
    android:width="0.0dip"
    android:color="#00000000"
    />

    <!-- 畫面顏色漸層，開始色碼與結束色碼進行漸層，角度為315度 -->
    <gradient
    android:startColor="@color/elite_theme_color_contact_group_item_members"
    android:endColor="@color/elite_theme_color_contact_group_item_members"
    android:angle="315"
    />
        
    <!-- padding內縮距離 -->
    <padding
        android:top="1.5dp" android:bottom="1.5dp" android:left="3dp" android:right="3dp"
    />
        
    <!-- 尺寸大小 -->
    <size
    />
        
</shape>