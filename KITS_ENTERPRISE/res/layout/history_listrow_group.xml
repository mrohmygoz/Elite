<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/history_gorup_layout"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="10dp"
    android:background="@color/elite_theme_color_history_item_background" >

    <FrameLayout
        android:id="@+id/image_framelayout"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="left|center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" >


        <ImageView
            android:id="@+id/history_bighead_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/history_icon_ring_glory"
            android:padding="6dp"
            android:scaleType="fitXY"
            android:src="@drawable/contact_head_big" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/rl_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_gravity="left|center" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/history_name_tv"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:drawablePadding="20dp"
                android:gravity="left"
                android:text="國際交換學生事務處專案負責人"
                android:maxEms="10"
                android:singleLine="true"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/history_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:text="來電"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/history_favorite_ibtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_click_selector"
            android:scaleType="centerCrop"
            android:src="@drawable/btn_important" />

        <TextView
            android:id="@+id/history_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/history_favorite_ibtn"
            android:text="20:48"
            android:textSize="12sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/history_group_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@color/elite_theme_color_history_item_line" />

    </RelativeLayout>

</LinearLayout>