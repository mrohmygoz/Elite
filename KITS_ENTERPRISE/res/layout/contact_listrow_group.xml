<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/group_layout"
    android:layout_width="fill_parent"
    android:layout_height="60dp" 
    android:layout_gravity="center"
    android:background="@drawable/contact_group_shape">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="5"
        android:layout_gravity="center" >             

        <TextView
            android:id="@+id/contact_group_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:maxEms="6"
            android:singleLine="true"
            android:text="HSNL特殊尊榮型12345"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
           
            <TextView
	            android:id="@+id/contact_group_members_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:minWidth="20dp"    
	            android:layout_gravity="right|center_vertical"         
	            android:gravity="center"
	            android:paddingLeft="7dp"
	            android:paddingRight="7dp"
	            android:text="5"
	            android:textColor="@android:color/white"
	            android:singleLine="true"
	            android:textSize="12sp" 
	            android:background="@drawable/contact_group_members"/>       
    </LinearLayout>
    
    <TextView
        android:id="@+id/group_point_tv"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="left|center"
        android:layout_weight="2"
        android:gravity="center"
        android:text="$ 100000 點"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <RelativeLayout
       android:layout_width="0dp"
        android:layout_height="match_parent" 
        android:layout_weight="1">

        <ImageView
            android:id="@+id/group_setting_ib"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:background="@drawable/button_click_selector"
            android:src="@drawable/img_setting" />

    </RelativeLayout>
    
</LinearLayout>