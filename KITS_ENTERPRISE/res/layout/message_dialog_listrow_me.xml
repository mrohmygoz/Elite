<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/msg_dialog_listrow_layout"
    android:orientation="vertical" >
    
    <TextView
		android:id="@+id/date_label_me"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:layout_marginBottom="6dp"
		android:layout_gravity="center"
		android:background="@drawable/message_date_shape"
		android:padding="5dip"
		android:text="星期二"
		android:textColor="#FFFFFF"
		android:textSize="12sp" />
    
    <LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="end"
	    android:layout_marginRight="10dp"
	    android:layout_marginTop="2dp"
	    android:layout_marginBottom="2dp"
	    android:id="@+id/msg_dialog_single_list"
	    android:orientation="horizontal" >

		    
        <LinearLayout 
            android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="right|bottom"
		    android:layout_marginRight="4dp"
		    android:id="@+id/num_and_time"
		    android:orientation="vertical" >
		    
		     <TextView
		        android:id="@+id/readed_number"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="4dp"
		        android:layout_gravity="right|bottom"
		        android:text="已讀1"
		        android:textSize="9sp" />  
		    
		    <TextView
		        android:id="@+id/single_msg_time"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="4dp"
		        android:layout_gravity="right|bottom"
		        android:text="15:30"
		        android:textSize="10sp" />    
		        
		</LinearLayout>
	        
	    <TextView
	        android:id="@+id/single_message"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="right|bottom"
	        android:text="這裡是說話的地方這裡是說話的地方這裡是說話的地方這裡是說話的地方"
	        android:maxWidth="220dp"
	        android:padding="10dip"
	        android:background="@drawable/message_single_shape"
	        android:textSize="15sp"
	        android:visibility="gone" />
	    
	    <ImageView
	        android:id="@+id/single_message_iv"
	        android:maxWidth="220dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="right|bottom"
	        android:visibility="gone" />

	    <FrameLayout
	        android:id="@+id/single_message_vv_frame"
		    android:layout_gravity="right|bottom"
		    android:maxWidth="110dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >
	        
		    <ImageView
		        android:id="@+id/single_message_vv"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:maxWidth="110dp" />

		    <Button
		        android:id="@+id/video_play"
		        android:layout_width="50dp"
		        android:layout_height="50dp"
		        android:layout_gravity="center"
		        android:background="@drawable/video_play" />
	        
	    </FrameLayout>
	    

	    <Button
	        android:id="@+id/button_warning"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_gravity="center"
	        android:layout_marginLeft="3dp"
	        android:background="@drawable/warning2"
	        android:text="" />
    
    </LinearLayout>

</LinearLayout>
