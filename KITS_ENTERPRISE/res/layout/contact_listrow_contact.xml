<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:clickable="true"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@drawable/button_click_selector"
    android:id="@+id/contact_contact_layout"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

	    <TableRow
	        android:id="@+id/tableRow1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >

	        <ImageView
	            android:id="@+id/contact_icon_niv"
	            android:layout_width="60dp"
	            android:layout_height="60dp"
	            android:scaleType="fitXY"
	            android:padding="3dp"
	      		android:layout_marginLeft="5dp"
	            android:background="@drawable/contact_image_circle_shape"
	            android:src="@drawable/contact_head_big" />

	        <FrameLayout
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent" 
	            >

	            <TextView
	                android:id="@+id/contact_new_tv"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="top|left"
	                android:textColor="@color/elite_theme_color_contact_item_member_new"
	                android:textSize="12sp"
	                android:visibility="invisible"
	                android:text="New" />
	            
	            <TextView
	            android:id="@+id/contact_name_tv"
	            android:layout_width="130dp"
	            android:layout_height="match_parent"
	            android:layout_gravity="center_vertical"
	            android:layout_marginLeft="10dp"
	            android:gravity="center_vertical"
	            android:singleLine="true"
	            android:maxEms="15"
	            android:text="abc"
	            android:textColor="@color/elite_theme_color_blue"
	            android:textSize="14sp"
	            android:textStyle="normal" />
	        </FrameLayout>
	
	        
	
	    </TableRow>

        <ImageButton
            android:id="@+id/contact_favorite_ibtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_click_selector"
            android:src="@drawable/btn_important" />

        <TextView
            android:id="@+id/contact_mvpn_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@+id/contact_favorite_ibtn"
            android:text="免費"
            android:textColor="@color/elite_theme_color_blue"
            android:visibility="invisible" />

    </RelativeLayout>

    

    <LinearLayout
        android:id="@+id/contact_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

 	</LinearLayout>
 	
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/elite_theme_color_contact_item_line" />

</LinearLayout> 