<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sharefile_listrow_layout"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="5dp"
    android:background="@drawable/message_shape"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/sharefile_bighead"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_gravity="left|center"
        android:layout_weight="1"
        android:src="@drawable/contact_head_big" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/sharefile_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="8dp"
            
            android:maxEms="10"
            android:singleLine="true"
            android:text="國際交換學生事務處專案負責人"
            android:textColor="@color/elite_theme_color_message_group_name"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>