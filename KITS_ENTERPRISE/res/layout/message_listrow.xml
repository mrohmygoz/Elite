<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_listrow_layout"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="5dp"
    android:background="@drawable/message_shape"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/message_bighead"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_gravity="left|center"
        android:layout_weight="1"
        android:src="@drawable/contact_head_big" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/message_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_gravity="left"
            
            android:maxEms="10"
            android:singleLine="true"
            android:text="國際交換學生事務處專案負責人"
            android:textColor="@color/elite_theme_color_message_group_name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/message_last_said"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="12dp"
            android:layout_gravity="left"
            
            android:maxLines="2"
            android:text="這裡是最後一個人說話"
            android:textColor="@color/elite_theme_color_message_last_said"
            android:textSize="13sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/last_said_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            
            android:text="20:48"
            android:textSize="12sp"
            android:textColor="@color/elite_theme_color_message_time"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/message_new_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
        
            android:background="@drawable/message_new_msg_number"
            android:gravity="center"
            android:minWidth="20dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:singleLine="true"
            android:text="5"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>