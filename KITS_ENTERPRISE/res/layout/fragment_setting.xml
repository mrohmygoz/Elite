<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
	<TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/setting_info_title"
                android:padding="5dp"
                android:background="@color/elite_theme_color_background_light"
                android:textColor="@color/elite_theme_color_systemsetting_title_font"
                android:textAppearance="?android:attr/textAppearanceMedium" />
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical" >

            

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:stretchColumns="*" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/setting_account_title_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/setting_info_account"
                            android:textColor="@color/elite_theme_color_systemsetting_font"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/setting_account_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/elite_theme_color_systemsetting_content_font"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                    </LinearLayout>

                </TableRow>
				<View
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:layout_marginBottom="10dp"
		        android:background="@color/elite_theme_color_line" />
                
                <TableRow
                    android:id="@+id/setting_version_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    
                        <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/setting_version_title_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/setting_info_version"
                            android:textColor="@color/elite_theme_color_systemsetting_font"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <Button
                            android:id="@+id/setting_version_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:background="@drawable/button_click_selector"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/elite_theme_color_systemsetting_content_font"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                    </LinearLayout>
                </TableRow>
				<View
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:layout_marginBottom="10dp"
		        android:background="@color/elite_theme_color_line" />
                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                                      
                        <Button
                            android:id="@+id/setting_about_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:background="@drawable/button_click_selector"
                            android:text="@string/setting_info_about"
                            android:textColor="@color/elite_theme_color_systemsetting_font"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                </TableRow>
				
                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
