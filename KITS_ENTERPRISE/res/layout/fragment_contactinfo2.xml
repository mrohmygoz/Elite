<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="350dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="50dp" 
        android:background="@color/elite_theme_color_contactinfo_header">

                <ImageButton
                    android:id="@+id/contactinfo_dismiss_ibtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_click_selector"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_dismiss" />

                <TextView
                    android:id="@+id/contact_name_tv"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_crown"
                    android:text="Jason Dog"
                    android:singleLine="true"
                    android:maxEms="20"
                    android:textColor="@color/elite_theme_color_contact_item_font"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv_crown"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignTop="@+id/contact_name_tv"
                    android:layout_marginLeft="16dp"
                    android:scaleType="centerCrop"
                    android:visibility="invisible"
                    android:src="@drawable/img_crown" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/main_background" 
                android:scaleType="centerCrop"/>

        </FrameLayout>
        
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            >
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_above="@+id/rl_info" >
            
            <FrameLayout
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" >

            <ImageView
                android:id="@+id/iv_user_head"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:padding="3dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:background="@drawable/contact_image_circle_shape"                             
                android:src="@drawable/contact_head_big" />
        </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_info"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_above="@+id/rl_call"
            android:background="@color/elite_theme_color_contactinfo_transparentblue" >

            <TextView
                android:id="@+id/contact_unitname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/contact_phone_tv"
                android:layout_below="@+id/contact_phone_tv"
                android:textColor="@android:color/white"
                android:text="HSNL" />

            <TextView
                android:id="@+id/contact_phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:text="0911123456"
                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_above="@+id/contact_unitname_tv"
                android:layout_toLeftOf="@+id/contact_unitname_tv"
                android:src="@drawable/img_phone_number" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/contact_unitname_tv"
                android:layout_alignLeft="@+id/imageView3"
                android:scaleType="fitXY"
                android:src="@drawable/img_unit" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_call"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@color/elite_theme_color_contactinfo_bottom_transparentblue" >

            <ImageButton
                android:id="@+id/contactinfo_call_ibtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_click_selector"
                android:src="@drawable/img_telephone_big" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
