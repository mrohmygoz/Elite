<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/history_detail_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:clickable="true"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" 
        android:layout_marginLeft="70dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/history_detail_rectangle_shape">
        
     <TextView
        android:id="@+id/history_duration_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="50dp"
        android:textColor="@color/elite_theme_color_history_item_click_detail_color"
        android:text="1小時22分鐘"
        android:textSize="12sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="12dp"
        android:layout_height="20dp"
        android:scaleType="centerCrop"
        android:layout_alignBottom="@+id/history_number_tv"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/img_phoneicon" />

    <TextView
        android:id="@+id/history_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/imageView1"
        android:text="未知來電"
        android:textColor="@color/elite_theme_color_history_item_click_detail_color"
        android:textSize="12sp"
        android:textStyle="bold" />

    
        <View
            android:id="@+id/history_item_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@color/elite_theme_color_history_item_line"
            android:layout_marginBottom="50dp"
            android:paddingTop="10dp" />
    </RelativeLayout>

 
</RelativeLayout>